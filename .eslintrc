{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false,
    "_paq"          : false,
    "wx"            : false
  },
  "rules": {
    "key-spacing"          : "off",
    "object-curly-spacing" : [2, "always"],
    "comma-dangle"         : "off",
    "semi"                 : ["error", "always"]
  }
}